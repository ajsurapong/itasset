<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs') %>
    <!-- DataTables -->
    <%- include('./partials/datatables.ejs') %>
    <!-- DataTables checkbox -->
    <link type="text/css" href="//gyrocode.github.io/jquery-datatables-checkboxes/1.2.12/css/dataTables.checkboxes.css"
        rel="stylesheet" />
    <script type="text/javascript"
        src="//gyrocode.github.io/jquery-datatables-checkboxes/1.2.12/js/dataTables.checkboxes.min.js"></script>
</head>

<body>
    <!-- navbar -->
    <%- include('./partials/topbar.ejs') %>

    <div class="container-fluid px-5">
        <!-- top menu 1 -->
        <div class="row ps-3">
            <div class="col-md-2 border rounded-lg py-2">
                ครุภัณฑ์ปี
                <select id="selectYear" style="width: 80px; margin-left: 10px;">
                    <% years.forEach(year=> { %>
                        <option value="<%= year.Year %>">
                            <%= year.Year %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <div class="col-md-10">
                <button class="btn btn-primary rounded float-end" data-toggle="modal"
                    data-target="#modalPushExcel" id="#" style="width: 120px;">นำออกไฟล์</button>
                <% if (user.role == 1 || user.role == 3) { %>
                    <button class="btn btn-warning rounded float-end mr-2" data-toggle="modal"
                        data-target="#upload" id="import" style="width: 120px;">นำเข้าไฟล์</button>
                <% } %>
            </div>
        </div>

        <!-- top menu 2 -->
        <div class="row my-3">
            <div class="col-md-6">
            </div>
            <div class="col-md-6">
                <button id="btnQR" class="button btn-secondary float-end">สร้าง QRcode</button>
                <!-- photo setting, for only admin -->
                <% if (user.role == 1 || user.role == 3) { %>
                    <select id="selectPhoto" class="float-end mx-2">
                        <option value="-1">ตั้งค่าการถ่ายรูป</option>
                        <option value="1">ถ่ายรูปทั้งหมด</option>
                        <option value="0">ไม่ถ่ายรูปทั้งหมด</option>
                        <option value="2">ถ่ายรูปเฉพาะที่เลือก</option>
                        <option value="3">ไม่ถ่ายรูปเฉพาะที่เลือก</option>
                    </select>
                <% } %>                            
            </div>
        </div>

        <!-- custom table filter -->
        <div class="row my-3 py-3 border">
            <div id="customFilter"></div>
        </div>

        <table id="myTable" class="table table-striped table-bordered mt-4" style="width:100%">
        </table>
    </div>

    <script src="/views/asset.js"></script>
</body>

</html>